generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Test {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model DiscordMessage {
  id            String       @id
  channelId     String
  authorId      String
  content       String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  workflowType  WorkflowType
  githubIssue   GitHubIssue? @relation(fields: [githubIssueId], references: [id])
  githubIssueId Int?

  thread   Thread? @relation(fields: [threadId], references: [id])
  threadId String? @unique
}

model GitHubIssue {
  id              Int              @id @default(autoincrement())
  owner           String
  repo            String
  issueNumber     Int
  title           String
  url             String
  labels          String[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  discordMessages DiscordMessage[]
  closed          Boolean          @default(false)
  GitHubCommit    GitHubCommit[]
}

model Thread {
  id             String          @id
  name           String
  createdAt      DateTime        @default(now())
  discordMessage DiscordMessage?
}

enum WorkflowType {
  BUG
  FEATURE
}

model GitHubCommit {
  id        String      @id
  issueId   Int
  commitSha String
  message   String
  url       String
  createdAt DateTime    @default(now())
  issue     GitHubIssue @relation(fields: [issueId], references: [id])
}
